<head>
 <style>
  .from-group{
    padding-bottom: 15px;
   }
 </style>
</head>

<body>
 <main>
 <p id="notice"></p>
 <div class="container">
 <div class="row"> 
 <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto"> 
   <h1>Editing Book</h1>

   <% if @book.errors.any? %>
   <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
   <% end %>

   <%= form_with model: @book do |f| %>
    <div class="from-group">
     <p>Title</p>
     <%= f.text_field :title, style: "width: 100%; padding: 5px 10px;", class: "form-control" %>
	   </div>
	   <div class="from-group">
     <p>Opinion</p>
     <%= f.text_area :body, style: "width: 100%; height: 2; padding: 5px 10px;", class: "form-control" %>
    </div>
    <div class="from-group">
     <%= f.submit "Update Book", class: "btn btn-success" %>
    </div>
   <% end %>
   
   <%= link_to "Show", book_path(@book) %>
    |
   <%= link_to "Back", books_path(@book) %>
 </div>
 </div>
 </div>
 </main>
</body>