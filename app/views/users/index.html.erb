<html>

 <head>
  <style>
   .table {
    margin-bottom: 0;
   }
  </style>
 <head>
 
 <body>
  <main>
   <p id="notice"></p>
   <div class="container px-5 px-sm-0">
   <div class="row"> 
   <div class="col-lg-3">
    <%= render 'books/list', book: @book, users: @users %>
   </div>

   <div class="col-lg-8 offset-md-1">
    <thead>
     <h2>Users</h2>
     <table class="table">
       <tbody>
        <tr>
         <th>image</th>
         <th>name</th>
         <th></th>
        </tr>
       </tbody>
     </table>
    </thead>

    <table class="table">
     <tbody>
      <tr>
       <% @users.each do |user| %>
        <td><%= image_tag user.get_image, width: "80px", height: "80px" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "show", user_path(user) %></td>
      </tr>
     </tbody>
       <% end %>
    </table>
 
   </div>
   </div>
   </div>
  </main>  
 </body>

</html>
